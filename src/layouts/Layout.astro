---
import { ViewTransitions } from "astro:transitions";
import Navigation from "../components/Navigation.astro";
interface Props {
  title: string;
  frontmatter: any;
  issueSlug?: string;
}

const { title, frontmatter, issueSlug } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="font-serif pb-16">
    <Navigation issue_slug={issueSlug} issue={frontmatter?.issue_number} />
    <div transition:animate="fade">
      <slot />
    </div>
    <style is:global>
      @font-face {
        font-family: "Young Serif";
        src: url("/fonts/YoungSerif-Regular.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "Lithops";
        src: url("/fonts/Lithops-Regular.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </body>
</html>
